{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "declaration": true,
    "noEmit": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": { "@duik/core": ["./core"] }
  },
  "exclude": ["node_modules", "./docs/*"]
}
